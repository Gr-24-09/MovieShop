@model MovieShop.Models.ViewModels.CartViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <!-- Cart Items -->
            <div class="card mb-4">
                <div class="card-body">

                    @foreach (var item in Model.CartItem)
                    {
                        <div class="row cart-item mb-3">
                            <div class="col-md-1">
                                <img src="@item.Movie.PosterPath" alt="Movie Poster" class="img-fluid rounded" />
                            </div>
                            <div class="col-md-5">
                                <h5 class="card-title">Title: @item.Movie.Title</h5>
                                <p class="text-muted">Director: @item.Movie.Director</p>

                            </div>
                            <div class="col-md-2">
                                <div class="input-group">
                                    <form asp-controller="Cart" asp-action="LowerQuantity" method="post">
                                        <button type="hidden" name="Id" value="@item.Movie.Id" class="btn btn-outline-secondary btn-sm" type="button">-</button>
                                    </form>
                                    <input style="max-width:100px" type="text" class="form-control  form-control-sm text-center quantity-input" value="@item.Quantity">
                                    <form asp-controller="Cart" asp-action="AddProductToCart" method="post">
                                        <button type="hidden" name="Id" value="@item.Movie.Id" class="btn btn-outline-secondary btn-sm" type="button">+</button>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-2 text-end">
                                <p class="fw-bold">@(@item.Movie.Price * item.Quantity)</p>
                                <form asp-controller="Cart" asp-action="RemoveProductFromCart" method="post">
                                    <input type="hidden" name="Id" value="@item.Movie.Id" />
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <hr>
                    }
                </div>
            </div>
            <!-- Continue Shopping Button -->
            <div class="text-start mb-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Continue Shopping
                </a>
            </div>
        </div>
        <div class="col-lg-4">
            <!-- Cart Summary -->
            <div class="card cart-summary">
                <div class="card-body">
                    <h5 class="card-title mb-4">Order Summary</h5>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Price(tax excl.)</span>
                        <span>@Model.SubTotalPrice.ToString("0.00")</span>
                    </div>
                    @*                     <div class="d-flex justify-content-between mb-3">
                        <span>Shipping</span>
                        <span>@Model.ShippingCost</span>
                    </div> *@
                    <div class="d-flex justify-content-between mb-3">
                        <span>Tax</span>
                        <span>@Model.Tax.ToString("0.00")</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <strong>Total</strong>
                        <strong>@Model.TotalPrice.ToString("0.00")</strong>
                    </div>
                </div>
            </div>
           @*  <!-- Promo Code -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Apply Promo Code</h5>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Enter promo code">
                        <button class="btn btn-outline-secondary" type="button">Apply</button>
                    </div>
                </div>
            </div> *@
        </div>
    </div>
    <form asp-controller="Cart" asp-action="Checkout" method="post">
        <div class="row">
            <div class="col-lg-4">
                <!-- Customer Details Form -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Billing Details</h5>
                        <!-- Billing Details -->
                        <div class="mb-3">
                            <label for="BillingFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="BillingFirstName" name="Customer.FirstNameBillingAddress" value="@Model.Customer.FirstNameBillingAddress" required>
                        </div>
                        <div class="mb-3">
                            <label for="BillingLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="BillingLastName" name="Customer.LastNameBillingAddress" value="@Model.Customer.LastNameBillingAddress" required>
                        </div>
                        <div class="mb-3">
                            <label for="BillingAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" id="BillingAddress" name="Customer.BillingAddress" value="@Model.Customer.BillingAddress" required>
                        </div>
                        <div class="mb-3">
                            <label for="BillingZip" class="form-label">Zip Code</label>
                            <input type="text" class="form-control" id="BillingZip" name="Customer.BillingZip" value="@Model.Customer.BillingZip" required>
                        </div>
                        <div class="mb-3">
                            <label for="BillingCity" class="form-label">City</label>
                            <input type="text" class="form-control" id="BillingCity" name="Customer.BillingCity" value="@Model.Customer.BillingCity" required>
                        </div>
                        <button type="button" class="btn btn-outline-secondary mb-3" onclick="copyBillingToDelivery()">Same Delivery Address</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">

                        <h5 class="card-title mb-3">Delivery Details</h5>


                        <!-- Delivery Details -->
                        <div class="mb-3">
                            <label for="DeliveryFirstName" class="form-label">First Name</label>
                            <input type="text" class="form-control" id="DeliveryFirstName" name="Customer.FirstNameDeliveryAddress" value="@Model.Customer.FirstNameDeliveryAddress" required>
                        </div>
                        <div class="mb-3">
                            <label for="DeliveryLastName" class="form-label">Last Name</label>
                            <input type="text" class="form-control" id="DeliveryLastName" name="Customer.LastNameDeliveryAddress" value="@Model.Customer.LastNameDeliveryAddress" required>
                        </div>
                        <div class="mb-3">
                            <label for="DeliveryAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" id="DeliveryAddress" name="Customer.DeliveryAddress" value="@Model.Customer.DeliveryAddress" required>
                        </div>
                        <div class="mb-3">
                            <label for="DeliveryZip" class="form-label">Zip Code</label>
                            <input type="text" class="form-control" id="DeliveryZip" name="Customer.DeliverZip" value="@Model.Customer.DeliverZip" required>
                        </div>
                        <div class="mb-3">
                            <label for="DeliveryCity" class="form-label">City</label>
                            <input type="text" class="form-control" id="DeliveryCity" name="Customer.DeliverCity" value="@Model.Customer.DeliverCity" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Proceed to Checkout</button>

                    </div>
                </div>
            </div>
           
        </div>
    </form>
</div>

<script>
    function copyBillingToDelivery() {
        document.getElementById("DeliveryFirstName").value = document.getElementById("BillingFirstName").value;
        document.getElementById("DeliveryLastName").value = document.getElementById("BillingLastName").value;
        document.getElementById("DeliveryAddress").value = document.getElementById("BillingAddress").value;
        document.getElementById("DeliveryZip").value = document.getElementById("BillingZip").value;
        document.getElementById("DeliveryCity").value = document.getElementById("BillingCity").value;
    }
</script>