@model List<OrderViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total Cost</th>
            <th>Movies</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerName</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.TotalCost.ToString("C")</td>
                <td>
                    <ul>
                        @foreach (var movie in order.Movies)
                        {
                            <li>@movie.Title - Quantity: @movie.Quantity, Price: @movie.Price</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>