@model MovieShop.Models.FrontPageQueriesDisplay


@{
    ViewData["Title"] = "Index";
}

<div class="bg-success float-end">
  <form asp-Controller="Movie" asp-action="Find">
    <label for="movie">⌕</label>
    <input type="text" id="movie" name="movie" placeholder="Search Here..">
    <input type="submit" value="Search">
</form>
</div>
<br />
<br />
<div class="row bg-warning">
    <h2 class ="float-md-start">New Releases</h2>
    <div>
        <partial name="_movieListPartial" model="@Model.Top5Latest"></partial>
    </div>
</div>
<hr />
<br />
<div class="row bg-info">
    <h2 class="float-md-start">Old Classics</h2>
    <div>
        <partial name="_movieListPartial" model="Model.Top5Oldest"></partial>
    </div>
</div>
<hr />
<br />
<div class="row bg-success">
    <h2 class="float-md-start">Low-Priced Movies</h2>
    <div>
        <partial name="_movieListPartial" model="@Model.Top5Cheapest"></partial>
    </div>
</div>
<br />
<hr />
<div class="row bg-primary">
    <h2 class="float-md-start">All Movies</h2>
    <div>
        <partial name="_movieListPartial" model="@Model.AllMovies"></partial>
    </div>
</div>
<hr />
