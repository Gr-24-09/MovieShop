@model List<MovieShop.Models.DataBase.Order>

<h2>Orders for Customer</h2>

@if (Model.Count == 0)
{
    <p>@ViewBag.Message</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    @* <td>@order.TotalPrice.ToString("C")</td> *@
                </tr>
            }
        </tbody>
    </table>
}