@model List<MovieShop.Models.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Customer Orders";
}

<div class="container mt-4">
    <h2 class="mb-4">Orders</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Total Cost</th>
                    <th>Movies</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@order.Totalcost.ToString("C")</td>
                        <td>
                            <ul>
                                @foreach (var movie in order.Movies)
                                {
                                    <li>
                                        <img src="@movie.PosterPath" alt="@movie.Title" style="width: 50px; height: 75px;" />
                                        <strong>@movie.Title</strong> -
                                        Quantity: @movie.Quantity,
                                        Price: @movie.Price.ToString("C")
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">
            No orders available for this customer.
        </div>
    }
</div>