@model IEnumerable<MovieShop.Models.DataBase.Movie>

@{
    ViewData["Title"] = "SearchResult";
}

@if (Model.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PosterPath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@item.PosterPath" alt="Movie Poster" width="100" height="150" />
            </td>
            <td>
                <a class="btn btn-primary" asp-action="AddProductToCart" asp-Controller="Cart">Buy</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <br />
    <br />
    <br />
    <br />
    <h3 class="text-primary float-lg-start">No movies found matching your search,Try other Movie!!.</h3>
    <br />
    <br />
    <br />
    <br />
}

<br />
<br />

<div>
    <a asp-action="Index" asp-Controller="Home">Back to Home</a>
</div>